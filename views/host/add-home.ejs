<%- include('../partials/head') %>
</head>
<body class="bg-gray-100 font-sans">
    <%- include('../partials/nav') %>
    <main>
    <div class="min-h-screen flex items-center justify-center">
        <div class="bg-white p-8 rounded-xl shadow-lg w-full max-w-md">
            <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">Add a New Home</h1>
            <form method="post" action="/host/add-home" class="space-y-6">
                <div>
                    <input type="text" name="houseName" placeholder="House Name" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-rose-500 focus:border-rose-500 transition">
                </div>
                <div>
                    <input type="number" name="price" placeholder="Price per night" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-rose-500 focus:border-rose-500 transition">
                </div>
                <div>
                    <input type="text" name="location" placeholder="Location" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-rose-500 focus:border-rose-500 transition">
                </div>
                <div>
                    <input type="number" name="rating" placeholder="Rating (1-5)" min="1" max="5" step="0.1" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-rose-500 focus:border-rose-500 transition">
                </div>
                <div>
                    <input type="text" name="photoUrl" placeholder="Photo URL" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-rose-500 focus:border-rose-500 transition">
                </div>
                <button type="submit" class="w-full bg-rose-500 hover:bg-rose-600 text-white font-bold py-3 px-4 rounded-lg transition duration-300 ease-in-out">Add Home</button>
            </form>
        </div>
    </div>
    </main>
</body>
</html>