<%- include('../partials/head') %>
</head>
<body class="bg-gray-100 font-sans">
    <%- include('../partials/nav') %>
    <main>
        <div class="container mx-auto px-4 py-8">
            <div class="text-center mb-12">
                <h1 class="text-5xl font-extrabold text-gray-900 leading-tight">All Host Homes</h1>
            </div>
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
                <% homes.forEach(home => { %>
                    <div class="bg-white rounded-xl shadow-lg overflow-hidden transform transition duration-300 hover:scale-105 hover:shadow-xl">
                        <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-56 object-cover">
                        <div class="p-5">
                            <h2 class="text-2xl font-bold text-gray-800 mb-2 truncate"><%= home.houseName %></h2>
                            <p class="text-gray-600 text-lg mb-3"><%= home.location %></p>
                            <div class="flex justify-between items-center mt-4">
                                <p class="text-gray-900 font-extrabold text-xl">₹<%= home.price %> <span class="text-base font-normal text-gray-500">/ night</span></p>
                                <p class="text-yellow-500 font-semibold text-lg">⭐ <%= home.rating %></p>
                            </div>
                            <a href="/host/edit-home/<%= home.id %>?editing=true" class="block text-center mt-4 w-full bg-yellow-500 text-white py-3 px-6 rounded-lg font-semibold hover:bg-yellow-600 transition duration-300 ease-in-out">Edit</a>
                            
                            <form action="/host/delete-home/<%= home.id %>" method="POST">
                                <button type="submit" class="block text-center mt-4 w-full bg-red-500 text-white py-3 px-6 rounded-lg font-semibold hover:bg-red-600 transition duration-300 ease-in-out">Delete</button>
                            </form>    
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </main>  
</body>
</html>