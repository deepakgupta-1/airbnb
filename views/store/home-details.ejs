<%- include('../partials/head') %>
</head>
<body class="bg-gray-100 font-sans">
   <%- include('../partials/nav') %>
    <main class="container mx-auto px-4 py-8">
        <% if (home) { %>
            <section class="text-center mb-12">
                <h1 class="text-5xl font-extrabold text-gray-900 leading-tight">See Your Home</h1>
            </section>

            <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                <section class="relative">
                    <img src="<%= home.photoUrl %>" alt="Photo of <%= home.houseName %>" class="w-full h-96 object-cover">
                    <div class="absolute inset-0 bg-black/40 flex items-center justify-center">
                        <h2 class="text-white text-4xl font-bold text-center px-4"><%= home.houseName %></h2>
                    </div>
                </section>

                <section class="p-8">
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-6">
                        <div class="flex items-center text-gray-800">
                            <i class="fas fa-map-marker-alt text-xl text-indigo-600 mr-3" aria-label="Location"></i>
                            <span class="text-lg"><strong>Location:</strong> <%= home.location %></span>
                        </div>
                        <div class="flex items-center text-gray-800">
                            <i class="fas fa-star text-xl text-yellow-500 mr-3" aria-label="Rating"></i>
                            <span class="text-lg"><strong>Rating:</strong> <%= home.rating %></span>
                        </div>
                        <div class="flex items-center text-gray-800">
                            <i class="fas fa-dollar-sign text-xl text-green-600 mr-3" aria-label="Price"></i>
                            <span class="text-lg"><strong>Price:</strong> $<%= home.price %> per night</span>
                        </div>
                    </div>
                    <div>
                       <%- include('../partials/addToFav') %>
                    </div>

                   
                    </ul>
                    </section>
                    <% } %>
                </section>
            </div>
      
    </main>
</body>
</html>