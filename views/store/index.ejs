<%- include('../partials/head') %>
</head>
<body class="bg-gray-100 font-sans">
   <%- include('../partials/nav') %>
    <main>
        <div class="container mx-auto px-4 py-8">
            <div class="text-center mb-12">
                <h1 class="text-5xl font-extrabold text-gray-900 leading-tight">Welcome to Hamara Airbnb</h1>
                <p class="mt-4 text-xl text-gray-600">Discover amazing places to stay, from cozy homes to luxurious villas.</p>
            </div>
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
                <% registeredHomes.forEach(home => { %>
                    <div class="bg-white rounded-xl shadow-lg overflow-hidden transform transition duration-300 hover:scale-105 hover:shadow-xl">
                        <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-56 object-cover">
                        <div class="p-5">
                            <h2 class="text-2xl font-bold text-gray-800 mb-2 truncate"><%= home.houseName %></h2>
                            <p class="text-gray-600 text-lg mb-3"><%= home.location %></p>
                            <div class="flex justify-between items-center mt-4">
                                <p class="text-gray-900 font-extrabold text-xl">₹<%= home.price %> <span class="text-base font-normal text-gray-500">/ night</span></p>
                                <p class="text-yellow-500 font-semibold text-lg">⭐ <%= home.rating %></p>
                            </div>
                            <button class="mt-4 w-full bg-rose-500 text-white py-3 px-6 rounded-lg font-semibold hover:bg-rose-600 transition duration-300 ease-in-out">Book Now</button>
                            
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </main>
    
</body>
</html>